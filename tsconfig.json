{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "types": ["src/types.ts"],
      "controllers/*": ["src/controllers/*"],
      "models/*": ["src/models/*"],
      "resolvers/*": ["src/resolvers/*"],
      "services/*": ["src/services/*"],
    }
  },
  "lib": ["es2015"]
}