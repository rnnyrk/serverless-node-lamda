{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["api/controllers/*"],
      "@models/*": ["api/models/*"],
      "@resolvers/*": ["api/resolvers/*"],
      "@services/*": ["api/services/*"],
      "@types": ["api/types"],
    }
  },
  "lib": ["es2015"]
}